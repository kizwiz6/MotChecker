@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <nav class="flex items-center justify-between">
                <div class="flex items-center">
                    <span class="text-lg font-semibold text-gray-900">MOT History Checker</span>
                </div>
                <div>
                    <a href="https://www.gov.uk/check-mot-history"
                       target="_blank"
                       class="text-sm text-gray-500 hover:text-gray-700">
                        Official MOT History
                    </a>
                </div>
            </nav>
        </div>
    </header>

    <main>
        @Body
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-8">
        <div class="absolute bottom-0 w-full bg-black bg-opacity-20 text-center py-4">
            <p class="text-sm text-blue-100">
                Kieran's MOT Checker Website.
                <a href="https://kizwiz6.github.io/portfolio/"
                   target="_blank"
                   class="text-white hover:text-blue-200 underline">
                    Click here to see Kieran's portfolio work
                </a>.
            </p>
        </div>
    </footer>
</div>