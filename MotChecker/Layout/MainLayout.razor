@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <nav class="flex items-center justify-between">
                <div class="flex items-center">
                    <span class="text-lg font-semibold text-gray-900">MOT History Checker</span>
                </div>
                <div>
                    <a href="https://www.gov.uk/check-mot-history"
                       target="_blank"
                       class="text-sm text-gray-500 hover:text-gray-700">
                        Official MOT History
                    </a>
                </div>
            </nav>
        </div>
    </header>

    <main>
        @Body
    </main>

    <footer class="bg-white border-t border-gray-200 mt-8">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-sm text-gray-500">
                This is Kieran's demonstration application. For official MOT history, please visit
                <a href="https://www.gov.uk/check-mot-history"
                   target="_blank"
                   class="text-primary-600 hover:text-primary-700">
                    GOV.UK's MOT History service
                </a>.
            </p>
        </div>
    </footer>
</div>